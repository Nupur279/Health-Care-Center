<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NGO_Medicine_Donation">

    <TextView
        android:id="@+id/Medicine_Donor_List"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/UI"
        android:fontFamily="@font/simonetta"
        android:padding="10dp"
        android:paddingStart="60dp"
        android:text="Medicine Donar's List "
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingStart="10dp"
        android:src="@drawable/back_icon2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Review_Medicine"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Medicine_Donor_List"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />

    <Button
        android:id="@+id/request_med_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="05dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/request_btn"
        android:text="request" />

</RelativeLayout>
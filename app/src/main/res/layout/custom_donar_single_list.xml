<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="15dp"
        android:padding="25dp"
        android:background="@drawable/royal">


        <TextView
            android:id="@+id/donar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"
            android:text="Donar Name "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donar_blood_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donar_name"
            android:layout_alignStart="@+id/donar_name"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:text="Blood Type"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/donar_blood_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donar_blood_type"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Gender"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/donar_blood_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donar_blood_gender"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Gender"
            android:textColor="#000"
            android:textSize="18sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="142dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/happy" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
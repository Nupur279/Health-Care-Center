<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NGO_Money_Donation">

    <TextView
        android:id="@+id/Money_Donor_List"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/UI"
        android:fontFamily="@font/simonetta"
        android:gravity="center"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:text="Money Donar's List "
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/back_icon2" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Review_Money"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Money_Donor_List"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp" />

</RelativeLayout>